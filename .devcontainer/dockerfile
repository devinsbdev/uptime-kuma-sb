FROM node:16
LABEL maintainer "uptime-kuma-sb"

RUN apt-get update && \
    apt-get install -y bash curl git python make g++ nano openssh-server gnupg nodejs

WORKDIR /app
COPY .. /app/
ENV dockerdev 1
